{
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}