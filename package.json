{
    "name": "@jwrunge/copper",
    "version": "0.0.1",
    "main": "dist/copper.js",
    "exports": {
        ".": {
            "require": "./dist/slim.copper.cjs",
            "import": "./dist/slim.copper.js",
            "default": "./dist/slim.copper.js",
            "types": "./dist/copper.d.ts"
        },
        "./dev": {
            "require": "./dist/dev.copper.cjs",
            "import": "./dist/dev.copper.js",
            "default": "./dist/dev.copper.js",
            "types": "./dist/copper.dev.d.ts"
        },
        "./cjs": {
            "default": "./dist/slim.copper.cjs",
            "types": "./dist/copper.cjs.d.ts"
        },
        "./es": {
            "default": "./dist/slim.copper.js",
            "types": "./dist/copper.es.d.ts"
        }
    },
    "type": "module",
    "scripts": {
        "build": "rollup -c && node generate_d.ts.js",
        "example": "npm run build & sirv tests --port 5000 --dev true ",
        "dev": "npm run build & sirv --port 5000 --dev true --single tests/interactive.html",
        "increment-patch": "node util/incrementPatchVersion.js",
        "publish.no-increment": "npm run build && npm run test && npm publish",
        "publish": "npm run build && npm run test && increment-patch && npm publish",
        "test.gzip": "wsl gzip -c ./dist/copper.js > ./dist/cu.gz"
    },
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "rollup": "^4.5.0",
        "sirv-cli": "^2.0.2",
        "terser": "^5.24.0",
        "typescript": "^5.4.5"
    }
}
